{
	"name": "batch-properties",
	"version": "0.0.1",
	"description": "Batch update the frontmatter from a CSV or a markdown tables",
	"main": "main.ts",
	"private": true,
	"scripts": {
		"prebuild": "tsc --noEmit --skipLibCheck",
		"build": "node esbuild.config.mjs --production",
		"dev:prod": "node esbuild.config.mjs --vault",
		"dev": "node esbuild.config.mjs",
		"export": "node esbuild.config.mjs --production --vault",
		"bump": "dotenv -- node commit-and-tag-version.mjs",
		"postbump": "dotenv -- if-env SKIP_POST_BUMP=true && echo skip bump || git push --follow-tags origin master",
		"predeploy": "bun run bump",
		"deploy": "bun run export",
		"lint": "bun biome format --write src/",
		"e2e": "bun run build && wdio run ./wdio.conf.mts"
	},
	"engines": {
		"node": "^22.2.0"
	},
	"keywords": [],
	"author": "Mara-Li",
	"license": "GPL-3.0+",
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@types/node": "^24.5.2",
		"builtin-modules": "5.0.0",
		"esbuild": "0.25.10",
		"i18next": "^25.5.2",
		"obsidian": "^1.8.7",
		"tslib": "2.8.1",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"@delucis/if-env": "^1.1.2",
		"auto-parse": "npm:@mara-li/auto-parse@^2.4.0",
		"@types/bun": "^1.2.22",
		"@types/mocha": "^10.0.10",
		"@wdio/cli": "^9.20.0",
		"@wdio/local-runner": "^9.20.0",
		"@wdio/mocha-framework": "^9.20.0",
		"@wdio/spec-reporter": "^9.20.0",
		"ansi-colors": "^4.1.3",
		"commander": "^14.0.1",
		"commit-and-tag-version": "^12.6.0",
		"dedent": "^1.7.0",
		"dotenv": "^17.2.2",
		"dotenv-cli": "^10.0.0",
		"obsidian-typings": "^4.51.0",
		"uniformize": "^2.5.0",
		"wdio-obsidian-reporter": "^2.1.2",
		"wdio-obsidian-service": "^2.1.2"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"classic-level",
		"edgedriver",
		"electron",
		"esbuild",
		"geckodriver",
		"obsidian-typings"
	]
}
